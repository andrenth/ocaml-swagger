(jbuild_version 1)

(rule
 ((targets (swagger_j.ml swagger_j.mli))
  (deps    (swagger.atd))
  (action  (run atdgen -j ${<}))))

(rule
 ((targets (swagger_t.ml swagger_t.mli))
  (deps    (swagger.atd))
  (action  (run atdgen -t ${<}))))

(library
 ((name swagger)
  (public_name swagger)
  (flags (:standard -warn-error -9-27-32-34-39))
  (libraries (atdgen re.pcre yojson))))
